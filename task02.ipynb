from jiwer import wer
import os

audio_files = sorted(os.listdir("audio"))
total_wer = 0

for audio_file in audio_files:
    audio_path = f"audio/{audio_file}"
    ref_path = f"reference/{audio_file.replace('.wav', '.txt')}"

    predicted = model.transcribe(audio_path)["text"]

    with open(ref_path, "r", encoding="utf-8") as f:
        reference = f.read()

    error = wer(reference.lower(), predicted.lower())
    total_wer += error

    print(f"{audio_file} â†’ WER: {error:.3f}")

print("\nAverage WER:", round(total_wer / len(audio_files), 3))


